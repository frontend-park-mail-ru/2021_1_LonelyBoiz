<div class="select-block">
    <select
        {{#if id}}id="{{id}}"{{/if}}
        title="{{title}}"
        {{#if disabled}}disabled{{/if}}
        {{#if required}}required{{/if}}
        {{#if name}}name="{{name}}"{{/if}}
        {{#if dataType}}data-type="{{dataType}}"{{/if}}
        class="select-block__select select-block__select_icon select-block__select_border border-radius {{class}}"
    >
        {{#each options}}
        <option title="{{title}}" value="{{value}}" class="select-block__option">{{title}}</option>
        {{/each}}
    </select>
</div>
