<div {{#if id}}id="{{id}}" {{/if}}
    class="form-item {{#if valid}}form-item_valid{{/if}}{{#if error}}form-item_error{{/if}}">
    <div class="form-item__top Subhead Subhead--w-regular {{#unless top}}hidden{{/unless}}">
        {{top}}
    </div>
    <div class="form-item__children {{#if loading}}placeholder-item{{/if}} {{#unless children}}hidden{{/unless}}">
        <div class="form-item__input">{{{children}}}</div>
        {{#if required}}<div class="error ml-2">*</div>{{/if}}
    </div>
    <div class="form-item__bottom Caption--l-1 Caption--w-regular {{#unless bottom}}hidden{{/unless}}">
        {{{bottom}}}
    </div>
</div>
