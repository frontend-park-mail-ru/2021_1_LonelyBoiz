{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard", "eslint:recommended"],
    "plugins": ["jsdoc"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "space-before-function-paren": ["error", "never"]
    },
    "globals": {
        "Handlebars": "readonly"
    },
    "ignorePatterns": ["*.precompiled.js"]
}
